<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="SwitchTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/memory_indicator_progress</item>
    </style>

    <style name="transferProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/transfer_indicator_progress</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:height">100dp</item>
    </style>


</resources>
