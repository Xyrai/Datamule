<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clRectangle"
        android:layout_width="294dp"
        android:layout_height="278dp"
        android:background="@drawable/rectangle_color_gray"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchPi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

    <ImageView
            android:id="@+id/ivNotFound"
            android:layout_width="110dp"
            android:layout_height="116dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo_not_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tvNoPi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik"
            android:text="@string/add_pi_title"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/clRectangle"
            app:layout_constraintStart_toStartOf="@+id/clRectangle"
            app:layout_constraintTop_toBottomOf="@+id/ivNotFound" />

    <TextView
            android:id="@+id/tvNoPiDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="@string/add_pi_desc"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoPi" />

</androidx.constraintlayout.widget.ConstraintLayout>